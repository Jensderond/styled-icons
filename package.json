{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@styled-icons/*",
    "tools/*"
  ],
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "rm -rf packages/@styled-icons/styled-icon/node_modules && rm -rf packages/styled-icons/node_modules && yarn install && yarn check && lerna run build --stream",
    "bump": "lerna version",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean --stream",
    "format": "prettier --write './**/*.{ts,tsx,js,md,json}'",
    "format:check": "prettier --list-different './**/*.{ts,tsx,js,md,json}'",
    "push": "lerna publish"
  },
  "devDependencies": {
    "lerna": "^3.19.0",
    "prettier": "^1.19.1"
  }
}
